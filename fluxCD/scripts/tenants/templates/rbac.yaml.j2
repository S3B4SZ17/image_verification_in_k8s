---
apiVersion: v1
kind: Namespace
metadata:
  labels:
    toolkit.fluxcd.io/tenant: {{ tenant_name }}
    goldilocks.fairwinds.com/enabled: "true"
    kustomize.toolkit.fluxcd.io/prune: disabled
  annotations:
    kustomize.toolkit.fluxcd.io/ssa: merge
  name: {{ tenant_namespace }}

---
apiVersion: v1
kind: ServiceAccount
metadata:
  labels:
    toolkit.fluxcd.io/tenant: {{ tenant_name }}
  annotations:
    kustomize.toolkit.fluxcd.io/ssa: merge
  name: {{ tenant_name }}-sa
  namespace: {{ tenant_namespace }}

---
apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  labels:
    toolkit.fluxcd.io/tenant: {{ tenant_name }}
  name: {{ tenant_name }}-reconciler
  namespace: {{ tenant_namespace }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: cluster-admin
subjects:
- apiGroup: rbac.authorization.k8s.io
  kind: User
  name: gotk:{{ tenant_name }}:reconciler
- kind: ServiceAccount
  name: {{ tenant_name }}-sa
  namespace: {{ tenant_namespace }}
